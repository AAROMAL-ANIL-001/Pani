
<body>

<!-- app -->
<div id="app">
    <!-- Header -->
    <header>
        <!-- Top-Header -->
        <div class="full-layer-outer-header">
            <div class="container clearfix">
                <nav>
                    <ul class="primary-nav g-nav">
                        <li>
                            <a href="tel:+111444989">
                                <i class="fas fa-phone u-c-brand u-s-m-r-9"></i>
                                Telephone:+111-444-989</a>
                        </li>
                        <li>
                            <a href="mailto:contact@domain.com">
                                <i class="fas fa-envelope u-c-brand u-s-m-r-9"></i>
                                E-mail: contact@domain.com
                            </a>
                        </li>
                    </ul>
                </nav>
                <nav>
                    <ul class="secondary-nav g-nav">
                        <li>
                            <a>
                                {{#if user}}
                                {{user.Name}}
                                {{else}}
                                My Account
                                {{/if}}
                                <i class="fas fa-chevron-down u-s-m-l-9"></i>
                            </a>
                            <ul class="g-dropdown" style="width:200px">
                                 <li>
                                    <a href="/profile">
                                        <i class="far fa-check-circle u-s-m-r-9"></i>
                                        Profile</a>
                                </li>
                                <li>
                                    <a href="/cart">
                                        <i class="fas fa-cog u-s-m-r-9"></i>
                                        My Cart <span class="badge bg-warning" id="cart-count">{{cartCount}}</span></a>
                                </li>
                                <li>
                                    <a href="/wishlist">
                                        <i class="far fa-heart u-s-m-r-9"></i>
                                        My Wishlist</a>
                                </li>
                               
                                <li>
                                    <a href="/signup">
                                        <i class="fas fa-sign-in-alt u-s-m-r-9"></i>
                                        Signup</a>
                                </li>
                                 {{#if user}}
                                 <li>
                                    <a href="/logout">
                                        <i class="fas fa-sign-in-alt u-s-m-r-9"></i>
                                        Logout</a>
                                </li>
                                 {{else}}
                                 <li>
                                    <a href="/login">
                                        <i class="fas fa-sign-in-alt u-s-m-r-9"></i>
                                        Login</a>
                                </li>
                                {{/if}}
                                
                            </ul> 
                        </li>
                       
                        
                    </ul>
                </nav>
            </div>
        </div>
        <!-- Top-Header /- -->
        <!-- Mid-Header -->
        <div class="full-layer-mid-header">
            <div class="container">
                <div class="row clearfix align-items-center">
                    <div class="col-lg-3 col-md-9 col-sm-6">
                        <div class="brand-logo text-lg-center">
                            <a href="/">
                                <img src="/images/main-logo/groover-branding-1.png" alt="Groover Brand Logo" class="app-brand-logo">
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-6 u-d-none-lg">
                        <form class="form-searchbox">
                            <label class="sr-only" for="search-landscape">Search</label>
                            <input id="search-landscape" type="text" class="text-field" placeholder="Search everything">
                            <div class="select-box-position">
                                <div class="select-box-wrapper select-hide">
                                    <label class="sr-only" for="select-category">Choose category for search</label>
                                    <select class="select-box" id="select-category">
                                        <option selected="selected" value="">
                                            All
                                        </option>
                                        <option value=""> Men's Clothing</option>
                                        <option value="">Women's Clothing
                                        </option>
                                        <option value="">Kids's Clothing
                                        </option>
                                       
                                    </select>
                                </div>
                            </div>
                            <button id="btn-search" type="submit" class="button button-primary fas fa-search"></button>
                        </form>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-6">
                        <nav>
                            <ul class="mid-nav g-nav">
                                <li class="u-d-none-lg">
                                    <a href="/">
                                        <i class="ion ion-md-home u-c-brand"></i>
                                    </a>
                                </li>
                                <li class="u-d-none-lg">
                                    <a href="/wishlist">
                                        <i class="far fa-heart"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="/cart" id="mini-cart-trigger">
                                        <i class="ion ion-md-basket"></i>
                                        <span class="badge bg-warning" id="cart-count">{{cartCount}}</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- Mid-Header /- -->
        <!-- Responsive-Buttons -->
        <div class="fixed-responsive-container">
            <div class="fixed-responsive-wrapper">
                <button type="button" class="button fas fa-search" id="responsive-search"></button>
            </div>
            <div class="fixed-responsive-wrapper">
                {{!-- <a href="wishlist.html">
                    <i class="far fa-heart"></i>
                    <span class="fixed-item-counter">4</span>
                </a> --}}
            </div>
        </div>
        
        <div class="full-layer-bottom-header">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-3">
                        <div class="v-menu v-close">
                            <span class="v-title">
                                <i class="ion ion-md-menu"></i>
                                All Categories
                                <i class="fas fa-angle-down"></i>
                            </span>
                            <nav>
                                <div class="v-wrapper">
                                    <ul class="v-list animated fadeIn">
                                        <li class="js-backdrop">
                                            <a href="/men">
                                                <i class="ion ion-md-shirt"></i>
                                                Men's Clothing
                                                <i class="ion ion-ios-arrow-forward"></i>
                                            </a>
                                            <button class="v-button ion ion-md-add"></button>
                                            
                                        </li>
                                        <li class="js-backdrop">
                                            <a href="/women">
                                                <i class="ion ion-ios-shirt"></i>
                                                Women's Clothing
                                                <i class="ion ion-ios-arrow-forward"></i>
                                            </a>
                                            <button class="v-button ion ion-md-add"></button>
                                           
                                        </li>

                                        <li class="js-backdrop">
                                            <a href="/kids">
                                                <i class="ion ion-ios-shirt"></i>
                                                Kid's Clothing
                                                <i class="ion ion-ios-arrow-forward"></i>
                                            </a>
                                            <button class="v-button ion ion-md-add"></button>
                                           
                                        </li>
                                        
                                       
                                     
                                    </ul>
                                </div>
                            </nav>
                        </div>
                    </div>
                 
                </div>
            </div>
        </div>
        <!-- Bottom-Header /- -->
    </header>
    <!-- Header /- -->
    <!-- Main-Slider -->
    

</div>