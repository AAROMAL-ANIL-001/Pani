<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}
               <div class="col-md-3 p-3">
                <div class="card" style="width:15rem; height:24rem">
                    <img class="card-img-top" src="/product-images/{{this.product._id}}.jpg" alt="" style="height:24rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{this.product.Name}}</h5>
                        <p class="card-text">Rs.{{this.product.Price}}</p>
                        <p class="card-text">Quantity: {{this.quantity}}</p>
                        <p class="card-text">{{this.Description}}</p>
                    </div>
                </div>
               </div>
               {{/each}}
        </div> 
    </div>
</section>
<script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</script>